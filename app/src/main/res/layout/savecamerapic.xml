    <RelativeLayout
        android:id="@+id/rlt_camerapic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map_back_layout"
        android:background="#D6E0EB" >

        <TextView
            android:id="@+id/txt_addPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="ADD PICTURE"
            android:textColor="#bdc3c7"
            android:textSize="18sp" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/edt_imagename"
            android:layout_below="@+id/txt_addPic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/users_add_user_icon" />

        <EditText
            android:id="@+id/edt_imagename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/roundable_edittext"
            android:ems="10"
            android:maxLength="50"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#000000" />

</RelativeLayout>
<LinearLayout
        android:id="@+id/rlt_editdeleted_saveimg"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:background="#34495f"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_edit_saveimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="EDIT" />

        <Button
            android:id="@+id/btn_deleted_saveimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_edit"
            android:text="DELETE" />
    </LinearLayout>
</RelativeLayout>