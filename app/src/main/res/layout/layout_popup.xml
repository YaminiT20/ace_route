<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="240dp"
    android:minHeight="24dp"
    android:background="@color/white"
    android:clickable="true"    
    android:padding="10dp" >
    
    <ImageView
        android:id="@+id/right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"        
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/edit_asset_map" />
    <!--close earlier bg image-->

    <LinearLayout
        android:id="@+id/mid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"   
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:linksClickable="true"
            android:text="Subtitle text"
            android:textColor="@color/black"
            android:textSize="17.65dp"
            android:textStyle="bold" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/order_time_sk"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/bg_sky_blue"
            android:textSize="19.65dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/order_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="19.65dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/order_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17.65dp"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17.65dp"
            android:textStyle="bold" 
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17.65dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mid_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/annotationMapBtn"
            android:layout_width="80dp"
            android:layout_weight="1"
            android:layout_height="35dp"          
            android:background="@drawable/gototree"
            android:visibility="gone" />
		
        <Button
            android:id="@+id/annotationMapBtnCam"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"     
            android:background="@drawable/cammimages" 
			android:visibility="gone"/>
        
        <ImageView
            android:id="@+id/Bt_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/marker_next"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/Bt_editList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_list_map" 
            android:visibility="gone"
      />
               
    </LinearLayout> 

</RelativeLayout>