<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_60">

        <LinearLayout
            android:id="@+id/lyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9"
            android:orientation="vertical"
            android:padding="@dimen/margin_5">

            <TextView
                android:id="@+id/nm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:text="name"
                android:textAllCaps="true"
                android:textColor="#34495f"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nm_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/roundable_edittext"
                android:maxLength="50"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:id="@+id/linear_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5">

                <TextView
                    android:id="@+id/text_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Shift"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:id="@+id/starttime"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="08:00 am"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/endtime"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="05:00 pm"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/rounded_green_fill_bg"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="Optional Location"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_break"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Break Time Range &amp; Duration"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startBreaktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="12:00 pm"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/endBreaktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="12:00 pm"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="60 mins"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/add_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Address"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/Editadr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_35"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/roundable_edittext"
                    android:padding="@dimen/margin_5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Terri_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Territory"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/editTerritory"
                    android:layout_width="@dimen/margin_140"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_green_fill_bg"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="Edit Territory"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/divier_lay"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/di_btn"
            android:background="@color/grey_options_group" />

        <LinearLayout
            android:id="@+id/di_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_di_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:padding="15dp"
                android:text="Cancel"
                android:textStyle="bold" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey_options_group" />

            <TextView
                android:id="@+id/_di_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:layout_weight="0.3"
                android:gravity="center"
                android:padding="15dp"
                android:text="Delete"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey_options_group" />

            <TextView
                android:id="@+id/_di_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:layout_weight="0.3"
                android:gravity="center"
                android:padding="15dp"
                android:text="OK"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>