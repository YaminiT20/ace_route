<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cellborder">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:padding="@dimen/margin_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/checkbox"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#aeaeae"
        android:layout_width="1px"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:padding="@dimen/margin_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/_date"
            android:layout_width="@dimen/margin_80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text=" "/>
        <TextView
            android:id="@+id/_date_month"
            android:layout_below="@id/_date"
            android:layout_marginTop="-5dp"
            android:layout_width="@dimen/margin_80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text=" "/>

        <TextView
            android:layout_below="@+id/_date_month"
            android:layout_centerHorizontal="true"
            android:id="@+id/_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/margin_4"
            android:textAlignment="center"
            android:text=" "/>
    </RelativeLayout>

    <View
        android:background="#aeaeae"
        android:layout_width="1px"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/event"
            android:textColor="#fff"
            android:background="#2980B9"
            android:layout_width="@dimen/margin_80"
            android:layout_height="match_parent"
            android:minLines="2"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_5"
            android:alpha="0"
            android:padding="@dimen/margin_2"
            android:textAlignment="center"
            android:gravity="center" />


        <TextView
            android:id="@+id/unevent"
            android:textColor="#FFF"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:background="#27AE60"
            android:layout_width="@dimen/margin_80"
            android:layout_height="match_parent"
            android:minLines="2"
            android:alpha="0"
            android:padding="@dimen/margin_2"
            android:textAlignment="center"
            android:gravity="center"
            />

        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@+id/unevent"
            android:layout_alignBottom="@+id/unevent"
            android:id="@+id/more"
            android:textColor="@color/bdr_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:padding="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_10"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>
