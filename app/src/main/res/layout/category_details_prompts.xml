<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    android:minHeight="150dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white_bg"
    android:orientation="vertical" >
        
    <!--Alert-->
    <LinearLayout      
        android:id="@+id/lyt_order_alert"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_dlg_description"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edt_order_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/roundable_edittext"
            android:textColor="@android:color/black"            
            android:padding="@dimen/margin_5"
            android:scrollHorizontally="false"
        	android:scrollbars="vertical"
            android:lines="10"
        	android:minLines="3"
            android:textSize="@dimen/text_size_20"            
            android:textCursorDrawable="@null"
            android:inputType="textMultiLine"
             />
    </LinearLayout>

  
   <!--NTW #-->
    <LinearLayout
        android:id="@+id/lyt_order_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_name_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_dlg_ntw"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/edt_route"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/roundable_edittext"
            android:textColor="@android:color/black"
            android:padding="@dimen/margin_5"
            android:singleLine="true"           
            android:textSize="@dimen/text_size_20"            
            android:textCursorDrawable="@null" />
    </LinearLayout> 
    
     <!--SSD #-->
     <LinearLayout
        android:id="@+id/lyt_order_ssd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_name_ssd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_dlg_ssd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/edt_ssd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/roundable_edittext"
            android:textColor="@android:color/black"
            android:padding="@dimen/margin_5"
            android:singleLine="true"            
            android:textSize="@dimen/text_size_20"            
            android:textCursorDrawable="@null" />
    </LinearLayout>
    
     <!--description-->
     <LinearLayout
        android:id="@+id/lyt_order_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_dlg_description"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20" />

        <!--<EditText  YD using for single line
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/roundable_edittext"
            android:textColor="@android:color/black"            
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:textSize="@dimen/text_size_20"            
            android:textCursorDrawable="@null" />-->

         <EditText
             android:id="@+id/edt_description"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/margin_5"
             android:background="@drawable/roundable_edittext"
             android:textColor="@android:color/black"
             android:padding="@dimen/margin_5"
             android:scrollHorizontally="false"
             android:scrollbars="vertical"
             android:lines="10"
             android:minLines="3"
             android:textSize="@dimen/text_size_20"
             android:textCursorDrawable="@null"
             android:inputType="textMultiLine"
             />
    </LinearLayout>
    
     <!--category-->
     
     
     <LinearLayout
        android:id="@+id/lyt_order_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_dlg_odr_category"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/category_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/rounded_green_fill_bg"
            android:padding="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
     
     <!--priority-->
      <LinearLayout
        android:id="@+id/lyt_order_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/lbl_priority"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/category_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/rounded_green_fill_bg"
            android:padding="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>
   
     
</LinearLayout>
</ScrollView>