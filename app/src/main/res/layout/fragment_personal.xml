<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="com.aceroute.mobile.software.fragment.ShifthourFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_5">

            <TextView
                android:id="@+id/nm_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:text="name"
                android:textAllCaps="true"
                android:textColor="#34495f"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nm_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/roundable_edittext"
                android:maxLength="50"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:id="@+id/linear_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5">

                <TextView
                    android:id="@+id/text_shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Shift"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">

                    <TextView
                        android:id="@+id/starttime"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="08:00 am"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/endtime"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="05:00 pm"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/rounded_green_fill_bg"
                    android:padding="@dimen/margin_10"
                    android:singleLine="true"
                    android:text="Optional Location"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_break"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Break Time Range &amp; Duration"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startBreaktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="12:00 pm"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/endBreaktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="12:00 pm"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="60 mins"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/add_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Address"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/Editadr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_35"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@drawable/roundable_edittext"
                    android:padding="@dimen/margin_5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tframe_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Recurrence"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/margin_5">

                    <TextView
                        android:id="@+id/fmdate_frame"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="Start Date"
                        android:textColor="@android:color/white" />


                    <TextView
                        android:id="@+id/todate_frame"
                        android:layout_width="@dimen/margin_140"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_green_fill_bg"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:singleLine="true"
                        android:text="End Date"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

            </LinearLayout>


            <CheckBox
                android:id="@+id/mon_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="MONDAY"
                android:textColor="@android:color/darker_gray" />


            <CheckBox
                android:id="@+id/tue_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="TUESDAY"
                android:textColor="@android:color/darker_gray" />

            <CheckBox
                android:id="@+id/wed_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="WEDNESDAY"
                android:textColor="@android:color/darker_gray" />

            <CheckBox
                android:id="@+id/thu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="THURSDAY"
                android:textColor="@android:color/darker_gray" />


            <CheckBox
                android:id="@+id/fri_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="FRIDAY"
                android:textColor="@android:color/darker_gray" />

            <CheckBox
                android:id="@+id/sat_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="SATURDAY"
                android:textColor="@android:color/darker_gray" />

            <CheckBox
                android:id="@+id/sun_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/color_white"
                android:button="@null"
                android:drawablePadding="@dimen/margin_5"
                android:drawableRight="@xml/custom_checkbox"
                android:padding="@dimen/margin_5"
                android:text="SUNDAY"
                android:textColor="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeTeritory"
                android:background="@color/color_white"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/text_territory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="Territory"
                    android:textAllCaps="true"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDrawPolygon"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_territory"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/rounded_green_fill_bg"
                    android:text="Add Territory"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</FrameLayout>