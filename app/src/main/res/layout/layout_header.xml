<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_Show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34495f"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/Bck_button_main"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="#34495f"
        android:visibility="gone">

        <ImageView
            android:id="@+id/back_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/button_back_selector"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/header_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:text="jfh"
        android:textColor="#FFFFFF"
        android:textSize="18.65sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/header_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sub_header_subtop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_top"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_5"
        android:text="lj"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/volumebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.5dp"
        android:background="@drawable/volume"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btn_Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/done_btns"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="37dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/calenderSwap"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/header_middle"
        android:layout_toRightOf="@+id/header_middle"
        android:background="@drawable/ic_swap_horiz_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.5dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/B_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/page_add"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_of_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_white_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="0"
        android:paddingTop="2dp"
        android:textColor="@color/bg_header"
        android:textSize="23dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_mapstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_50"
        android:layout_toRightOf="@+id/header_middle"
        android:background="@drawable/button_map_selector"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btn_mapstyle_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@+id/header_middle"
        android:background="@drawable/button_map_selector"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_mapall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/map_button_selector"
        android:paddingRight="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_mapodrtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="37dp"
        android:layout_toLeftOf="@+id/B_plus"
        android:background="@drawable/map_button_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/lastsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/select_order_list_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/panic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/panic_selector"
        android:padding="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_mapodr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:background="@drawable/user_map_select"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_tasktreeMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/header_top"
        android:background="@drawable/map_tree_select"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_taskuserMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/user_map_select"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/syncbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_toRightOf="@+id/sub_header_subtop"
        android:background="@drawable/sync_button_select"
        android:visibility="gone" />

</RelativeLayout>
