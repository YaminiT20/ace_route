<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_white_bg">

    <RelativeLayout
        android:id="@+id/back_shift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="back" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/bdr_green" >

            <TextView
                android:id="@+id/back_view_invite_textview_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:padding="@dimen/margin_15"
                android:drawableLeft="@drawable/row_edit"
                android:gravity="center|left"
                android:text="  Edit"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_20" />

            <!--YD this is the dummy text box just to increase the size of the swipe which is in background-->
            <TextView
                android:id="@+id/back_view_dummy_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_22"
                android:layout_below="@+id/back_view_invite_textview_shift"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_red" >

            <TextView
                android:id="@+id/back_view_chat_textview_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20"
                android:padding="@dimen/margin_14"
                android:drawableRight="@drawable/row_delete"
                android:gravity="center|right"
                android:text="Delete  "
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_20"/>
            <TextView
                android:id="@+id/back_view_dummy1_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_22"
                android:layout_below="@+id/back_view_chat_textview_shift"/>

        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/front_shift"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:tag="front" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10">


                <TextView
                    android:id="@+id/hrstxt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_toRightOf="@+id/hrstxt"
                    android:id="@+id/titlehrs"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


            </RelativeLayout>
    </LinearLayout>


</FrameLayout>
